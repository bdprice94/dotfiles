{
  "$schema": "https://puremourning.github.io/vimspector/schema/vimspector.schema.json#",
  "configurations": {
    "Python: Attach To Vim": {
      "variables": {
        "port": "5678",
        "host": "localhost"
      },
      "adapter": "multi-session",
      "configuration": {
        "request": "attach"
      }
    },
    "Python: Run current script": {
      "adapter": "debugpy",
      "configuration": {
        "request": "launch",
        "program": "${file}",
        "args": [ "*${args:--update-gadget-config}" ],
        "stopOnEntry": "false",
        "justMyCode#json": "${justMyCode:true}",
        "breakpoints": {
            "exception": {
                "caught": "",
                "uncaught": "Y"
            }
        }
      }
    },
    "test": {
        "adapter": "CodeLLDB",
        "configuration": {
            "Mimode": "",
            "args": [],
            "cwd": "${workspaceRoot}",
            "program": "{workspaceRoot}/Debug/bin/test",
            "request": "launch"
        }
    }
  }
}
